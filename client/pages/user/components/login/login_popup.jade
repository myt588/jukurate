template(name='login_popup')
  .login-popup.container.hero-header
    .row
      .col-sm-12.text-center
        .panel.panel-form
          .panel-heading
            .row
              .col-xs-6
                a#login-form-link.active(href='#') Login
              .col-xs-6
                a#register-form-link(href='#') Register
            hr
          .panel-body
            .row
              .col-lg-12
                form#login-form(action='#', method='post')
                  .form-group
                    input#login-username.form-control(type='text', name='username', tabindex='1', placeholder='Username', value='')
                  .form-group
                    input#login-password.form-control(type='password', name='password', tabindex='2', placeholder='Password')
                  .form-group.text-center
                    input#remember(type='checkbox', tabindex='3', name='remember')
                    label(for='remember')  Remember Me
                  .form-group
                    input#login-submit.form-control.btn.btn-submit(type='submit', name='login-submit', tabindex='4', value='Log In')
                  .form-group
                    .row
                      .col-lg-12
                        .text-center
                          a.login-forgot-password(href='#', tabindex='5') Forgot Password?
                form#register-form(action='#', method='post')
                  .form-group
                    input#register-username.form-control(type='text', name='username', tabindex='1', placeholder='Username', value='')
                  .form-group
                    input#register-email.form-control(type='email', name='email', tabindex='1', placeholder='Email Address', value='')
                  .form-group
                    input#register-password.form-control(type='password', name='password', tabindex='2', placeholder='Password')
                  .form-group
                    input#register-confirm-password.form-control(type='password', name='confirm-password', tabindex='2', placeholder='Confirm Password')
                  .form-group
                    input#register-submit.form-control.btn.btn-submit(type='submit', name='register-submit', tabindex='4', value='Register Now')